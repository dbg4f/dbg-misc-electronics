<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="classpath:config.properties"/>
    </bean>


    <bean id="orchestrator" class="dbg.electronics.robodrv.Orchestrator" factory-method="getInstance">
        <property name="hidEventListener" ref="hidEventListener"/>
    </bean>


    <bean id="hidEventListener" class="dbg.electronics.robodrv.hid.HidEventListener">
        <constructor-arg index="0" value="${hidEventsFile}"/>
        <constructor-arg index="1" ref="orchestrator"/>
        <constructor-arg index="2" ref="orchestrator"/>
    </bean>




</beans>